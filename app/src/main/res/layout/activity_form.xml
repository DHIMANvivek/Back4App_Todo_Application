<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PromoCode : Vivek-Back4App"
        android:textAlignment="center"
        android:layout_marginTop="10px"
        android:layout_marginBottom="18px"
        android:padding="10px"
        />

    <EditText
        android:id="@+id/edit_note_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Icon"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/edit_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_below="@id/edit_note_icon"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/edit_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Content"
        android:layout_below="@id/edit_note_title"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/edit_note_content"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_below="@id/button_save"
        android:layout_margin="16dp"
        android:visibility="gone" />
</RelativeLayout>
